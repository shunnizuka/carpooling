<!DOCTYPE html>
<html>

<head>
    <title>Pending Rides</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css"
        href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <!-- Material Kit CSS -->
    <link href="assets/css/material-kit.css?v=2.0.5" rel="stylesheet" />
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body class="landing-page sidebar-collapse">
    <!--can change color by changing the bg-danger-->
    <nav class="navbar fixed-top navbar-expand-lg bg-danger" color-on-scroll="100">
        <div class="container">
            <div class="navbar-translate">
                <a class="navbar-brand" href="/navbar"><strong>GrabCab</strong></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/filter_rides">FindRide</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/update_bids">Pending<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/rate_rides">Completed</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile_passenger">Profile</a>
                    </li>
                    <li class="nav-item dropdown">
                        <form class="form-inline ml-auto" method="POST">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Setting
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <button type="submit" class="dropdown-item" formaction="/logout">Logout</button>
                            </div>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="page-body">
        <div class="container">
            <div class="card card-nav-tabs">
                <div class="card-header card-header-danger">
                    <strong>CHOOSE BID TO EDIT OR DELETE</strong>
                </div>
                <div class="card-body">
                    <form id="update-bids-form" method="POST" action="update_bids">
                        <div class="form text-center">
                            <div class="form-group">
                                <label for="rideid">Ride ID</label>
                                <input type="text" class="form-control" id="rideid" name="rideid"
                                    placeholder="Enter the ID of the ride you want to edit or delete your bid for">
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="button" class="btn btn-primary delete" data-toggle="modal"
                                data-target="#modalUpdatebid">Edit</a>
                                <button class="btn btn-primary delete" formaction="/update_bids"
                                    type="submit">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <h1><%= title%></h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name of Bidder</th>
                <th scope="col">Ride ID</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            <% for(var i=0; i<result.length; i++) { %>
            <tr>
                <td><%= result[i].biddername%></td>
                <td><%= result[i].rideid%></td>
                <td><%= result[i].price%></td>
            </tr>
            <% } %>
        </tbody>
    </table>

    <!-- edit modal-->
    <div class="modal fade show" id="modalUpdatebid" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Edit Bid</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body mx-3">
                    <form class="md-form mb-5" method="POST" action="edit_bids">
                        <i class="fas fa-envelope prefix grey-text"></i>
                        <input type="number" id="rideid" name="rideid" class="form-control validate">
                        <label data-error="wrong" data-success="right" for="defaultForm-email">Re-enter Ride
                            ID</label>
                        <input type="number" step="0.01" id="newprice" name="newprice" class="form-control validate">
                        <label data-error="wrong" data-success="right" for="defaultForm-email">New Price</label>
                        <div class="modal-footer d-flex justify-content-center">
                            <button type="submit" formaction="/edit_bids" class="btn btn-default">Submit new bid</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!--   Core JS Files   -->
    <script src="assets/js/core/jquery.min.js" type="text/javascript"></script>
    <script src="assets/js/core/popper.min.js" type="text/javascript"></script>
    <script src="assets/js/core/bootstrap-material-design.min.js" type="text/javascript"></script>
    <script src="assets/js/plugins/moment.min.js"></script>
    <!--	Plugin for the Datepicker, full documentation here: https://github.com/Eonasdan/bootstrap-datetimepicker -->
    <script src="assets/js/plugins/bootstrap-datetimepicker.js" type="text/javascript"></script>
    <!--  Plugin for the Sliders, full documentation here: http://refreshless.com/nouislider/ -->
    <script src="assets/js/plugins/nouislider.min.js" type="text/javascript"></script>
    <!-- Place this tag in your head or just before your close body tag. -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <!-- Control Center for Material Kit: parallax effects, scripts for the example pages etc -->
    <script src="assets/js/material-kit.js?v=2.0.5" type="text/javascript"></script>
</body>

</html>